{
    "$schema": "http://json-schema.org/draft-07/schema",
    "description": "Object for saving athlete data associated with LabTools",
    "type": "object",
    "name": "Athlete",
    "properties": {
        "birthdate": {
            "type": "string"
        },
        "gender": {
            "type": "string"
        },
        "discipline": {
            "enum": ["racing", "mtb-xco", "mtb-dh", "triathlon", "cross", "gravel", "other"]
        },

        "notes": {
            "type": "string"
        },
        
        "tests": {
            "type": "array",
            "items": {
                "type": "string"
            }
        }
    }
}